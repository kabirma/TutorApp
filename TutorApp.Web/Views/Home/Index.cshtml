@model TutorApp.Web.ViewModels.ListViewModel

<style>

    .dropbtn {
        background-color: dodgerblue;
        color: white;
        padding: 16px 64px;
        font-size: 16px;
        border: none;
        border-radius:5px;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: dodgerblue;
            background-color:white;
            padding: 12px 85px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: dodgerblue;
                color:white;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: dodgerblue;
    }
</style>

<main>
    <section class="hero_single version_2">
        <div class="wrapper">
            <div class="container">
                <h3>What would you learn?</h3>
                <p>Increase your expertise in business, technology and personal development</p>
                <form>
                    <div id="custom-search-input">
                        <div class="dropdown">
                            <button class="dropbtn">Our Courses</button>
                            <div class="dropdown-content">
                                @foreach (var course in Model.Courses.Take(3).ToList())
                                {
                                    <a href="/Home/LessonFields/@course.ID">@course.Name</a>
                                }
                                <a href="/Home/Lesson" style="color:white;background-color:dodgerblue;"><b>View Courses</b></a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- /hero_single -->
    <div class="features clearfix">
        <div class="container">
            <ul>
                <li>
                    <i class="pe-7s-study"></i>
                    <h4 style="color:white!important;">@Model.CoursesCount</h4><span>Explore a variety of fresh topics</span>
                </li>
                <li>
                    <i class="pe-7s-cup"></i>
                    <h4 style="color:white!important;">@Model.TeacherCount</h4><span>Find the right instructor for you</span>
                </li>
                <li>
                    <i class="pe-7s-video"></i>
                    <h4 style="color:white!important;">@Model.VideoCount</h4><span>Learn from our storage of Videos</span>
                </li>
            </ul>
        </div>
    </div>
    <!-- /features -->
    <div class="container-fluid margin_120_0">
        <div class="main_title_2">
            <span><em></em></span>
            <h2>
                @if (Model.CompanyDetail != null && Model.CompanyDetail[0] != null)
                {
                    <text> @Model.CompanyDetail[0].Name</text>
                }
                else
                {
                    <text>Edutime</text>
                } Popular Teachers
            </h2>
            <p>Cum doctus civibus efficiantur in imperdiet deterruisset.</p>
        </div>
        <div id="reccomended" class="owl-carousel owl-theme">
            @if (Model.Teachers != null)
            {
                foreach (var teachers in Model.Teachers)
                {
                    <div class="item">
                        <div class="box_grid">
                            @if (teachers.ImageUrl != null)
                            {
                                <figure style="height:600px;width:auto;">

                                    <a href="/Home/TeacherDetails/@teachers.ID"><img src="@teachers.ImageUrl" /> </a><div class="price">$@teachers.HoulryRate/hr</div>

                                </figure>
                            }
                            else
                            {
                                <figure>

                                    <a href="/Home/TeacherDetails/@teachers.ID"><img src="http://www.tissueagora.com/CmsData/Agora/DefaultPortraitImage.png" height="100%" width="auto" /> </a><div class="price">$@teachers.HoulryRate/hr</div>

                                </figure>
                            }

                            <div class="wrapper">
                                <small>@teachers.UndergraduateMajor From @teachers.UndergraduateCollage</small>
                                <h3>@teachers.Name @teachers.LName</h3>
                                <p>@teachers.Bio</p>
                                <div class="rating"><i class="icon_star voted"></i><i class="icon_star voted"></i><i class="icon_star voted"></i><i class="icon_star"></i><i class="icon_star"></i> <small>(145)</small></div>
                            </div>
                            <ul>
                                <li><a href="course-detail.html">View Profile</a></li>
                                <li><i class="icon_like"></i> @teachers.Email</li>

                            </ul>
                        </div>
                    </div>
                    <!-- /item -->
                }
            }
            else
            {
                <div class="alert alert-danger">No Teachers Found!</div>
            }
        </div>
        <!-- /carousel -->
        <div class="container">
            <p class="btn_home_align"><a href="/Home/AvailableTeacher" class="btn_1 rounded">View all Teachers</a></p>
        </div>
        <!-- /container -->
        <hr>
    </div>
    <!-- /container -->
    <div class="container margin_30_95">
        <div class="main_title_2">
            <span><em></em></span>
            <h2>
                @if (Model.CompanyDetail != null && Model.CompanyDetail[0] != null)
                {
                    <text> @Model.CompanyDetail[0].Name</text>
                }
                else
                {
                    <text>Edutime</text>
                } Categories Courses
            </h2>
            <p>Cum doctus civibus efficiantur in imperdiet deterruisset.</p>
        </div>
        <div class="row">
       @if (Model.Courses != null) { 
       foreach (var courses in Model.Courses.Where(courses => courses.IsFeatured).Take(12).ToList())
       {
            <div class="col-lg-4 col-md-6 wow" data-wow-offset="150">
                <a href="/Home/LessonFields/@courses.ID" class="grid_item">
                    <figure class="block-reveal" style="height:200px;width:auto;">
                        <div class="block-horizzontal"></div>
                        <img src="@courses.Imageurl" height="100%" width="auto" class="img-fluid" alt="">
                        <div class="info">
                            <h3>@courses.Name</h3>
                        </div>
                    </figure>
                </a>
            </div>
            <!-- /grid_item -->
           }
       }
       else
       {
                <div class="alert alert-danger">No Courses Found!</div>
       }
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
    <div class="bg_color_1">
        <div class="container margin_120_95">
            <div class="main_title_2">
                <span><em></em></span>
                <h2>
                    @if (Model.CompanyDetail != null && Model.CompanyDetail[0] != null)
                    {
                        <text> @Model.CompanyDetail[0].Name</text>
                    }
                    else
                    {
                        <text>Edutime</text>
                    } Teaching Jobs
                </h2>
                <p>Cum doctus civibus efficiantur in imperdiet deterruisset.</p>
            </div>
            <div class="row">
                @if (Model.Job != null)
                {
                    foreach (var jobs in Model.Job)
                    {
                        <div class="col-lg-6">
                            <a class="box_news" href="/Home/TutoringJobsView">
                                <figure>
                                    <img src="https://www.thoughtco.com/thmb/45XWafEdDpIzg4Ze9943GM7fMi4=/768x0/filters:no_upscale():max_bytes(150000):strip_icc()/GettyImages-187244393-5a980ce743a1030037ba389f.jpg" alt="">
                                    <figcaption><strong>@jobs.Date.Substring(5, 5).Replace("-", " ")</strong></figcaption>
                                </figure>
                                <ul>
                                    <li>Student: @jobs.Student.Name</li>
                                    <li>@jobs.Date</li>
                                </ul>
                                <h4>@jobs.Name</h4>
                                <p>@if (jobs.Description.Length > 150)
                                {<text>@jobs.Description.Substring(0, 150)</text> }
                            else
                            {<text>@jobs.Description.Substring(0, jobs.Description.Length)</text>}</p>


                            </a>


                        </div>


                        <!-- /box_news -->
                    }
                }
                else
                {
                    <div class="alert alert-danger">No Teaching Jobs Found Found!</div>
                }
            </div>
            <!-- /row -->
            <p class="btn_home_align"><a href="/Home/TutoringJobsView" class="btn_1 rounded">View all Job Posts</a></p>
        </div>
        <!-- /container -->
    </div>
    <!-- /bg_color_1 -->
    <div class="call_section">
        <div class="container clearfix">
            <div class="col-lg-5 col-md-6 float-right wow" data-wow-offset="250">
                <div class="block-reveal">
                    <div class="block-vertical"></div>
                    <div class="box_1">
                        <h3>Enjoy a great students community</h3>
                        <p>We're delighted that we're doing things right according to those who matter to us most: our students. We've achieved over 90 per cent for student satisfaction.</p>
                        <a href="/Home/Accounttype" class="btn_1 rounded">Sign Up to See</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/call_section-->
</main>
<!-- /main -->
