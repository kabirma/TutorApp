@using TutorApp.Web.Helper;
@model TutorApp.Web.ViewModels.ListViewModel
@{
    ViewBag.Title = "Contact";
}

<main>
    <section id="hero_in" class="contacts">
        <div class="wrapper">
            <div class="container">
                <h1 class="fadeInUp"><span></span>Contact @Model.CompanyDetail[0].Name</h1>
            </div>
        </div>
    </section>
    <!--/hero_in-->
    <div class="contact_info">
        <div class="container">
            <ul class="clearfix">
                <li>
                    <i class="pe-7s-map-marker"></i>
                    <h4 style="color:white">Address</h4>
                    <span>@Model.CompanyDetail[0].Address<br>@Model.CompanyDetail[0].City - @Model.CompanyDetail[0].State</span>
                </li>
                <li>
                    <i class="pe-7s-mail-open-file"></i>
                    <h4 style="color:white">Email address</h4>
                    <span>@Model.CompanyDetail[0].Email<br><small>Monday to Friday 9am - 7pm</small></span>
                </li>
                <li>
                    <i class="pe-7s-phone"></i>
                    <h4 style="color:white">Contacts info</h4>
                    <span>@Model.CompanyDetail[0].PhoneNo<br><small>Monday to Friday 9am - 7pm</small></span>
                </li>
            </ul>
        </div>
    </div>
    <!--/contact_info-->
    <div class="bg_color_1">
        <div class="container margin_120_95">
            <div class="row justify-content-between">
                <div class="col-lg-5">
                    <div class="map_contact">
                    </div>
                    <!-- /map -->
                </div>
                <div class="col-lg-6">
                    <h4>Send a message</h4>
                    <p>Ex quem dicta delicata usu, zril vocibus maiestatis in qui.</p>
                    <div id="message-contact"></div>
                    <form method="post" action="" id="contactform" autocomplete="off">
                        <div class="row">
                            <div class="col-md-6">
                                <span class="input">
                                    <input class="input_field" type="text" id="name_contact" name="Name">
                                    <label class="input_label">
                                        <span class="input__label-content">Your Name</span>
                                    </label>
                                </span>
                            </div>
                            <div class="col-md-6">
                                <span class="input">
                                    <input class="input_field" type="text" id="lastname_contact" name="lastname_contact">
                                    <label class="input_label">
                                        <span class="input__label-content">Last name</span>
                                    </label>
                                </span>
                            </div>
                        </div>
                        <!-- /row -->
                        <div class="row">
                            <div class="col-md-6">
                                <span class="input">
                                    <input class="input_field" type="email" id="email_contact" name="Email">
                                    <label class="input_label">
                                        <span class="input__label-content">Your email</span>
                                    </label>
                                </span>
                            </div>
                            <div class="col-md-6">
                                <span class="input">
                                    <input class="input_field" type="text" id="phone_contact" name="Subject">
                                    <label class="input_label">
                                        <span class="input__label-content">Subject</span>
                                    </label>
                                </span>
                            </div>
                        </div>
                        <!-- /row -->
                        <span class="input">
                            <textarea class="input_field" id="message_contact" name="Message" style="height:150px;"></textarea>
                            <label class="input_label">
                                <span class="input__label-content">Your message</span>
                            </label>
                        </span>
                        <input type="hidden" name="Date" id="date" />
                        <p class="add_top_30"><input type="button" value="Submit" class="btn_1 rounded" id="submit-contact"></p>
                    </form>
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /bg_color_1 -->
</main>
<!--/main-->

<script>
    $("#submit-contact").click(function () {
        var dNow = new Date();
        var utcdate = (dNow.getMonth() + 1) + '/' + dNow.getDate() + '/' + dNow.getFullYear() + "::" + dNow.getHours() + ":" + dNow.getMinutes() + ":" + dNow.getSeconds();;

        $("#date").val(utcdate);
        $.ajax({
            type: "POST",
            url: "@Url.ContactUS()",
            data: $("#contactform").serialize()
        })
            .done(function (response) {
                alert("Message Sent");
               
            })
            .fail(function (XMLHttpRequest, status, errorthrown) { alert("error"); });
    });
    
</script>