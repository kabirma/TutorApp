@using TutorApp.Web.Helper;
@model TutorApp.Web.ViewModels.ListViewModel

@{
    ViewBag.Title = "AvailableTeacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <section id="hero_in" class="courses">
        <div class="wrapper">
            <div class="container">
                <h1 class="fadeInUp"><span></span>Available Teachers</h1>
            </div>
        </div>
    </section>
    <!--/hero_in-->
    <div class="filters_listing sticky_horizontal">
        <div class="container">
            <ul class="clearfix">
                <li>
                    <div class="switch-field">
                        <input type="radio" id="all" name="listing_filter" value="all">
                        <label class="period-filter" data-time="old" for="old">Old</label>

                        <input type="radio" id="latest" name="listing_filter" value="latest" checked>
                        <label class="period-filter" data-time="new" for="latest">Latest</label>
                    </div>
                </li>
                <li>
                    <div class="layout_view">
                        <input type="text" placeholder="Search File " id="searchtxt" class="search-input" />
                    </div>
                </li>

                <li>
                    <select name="orderby" class="selectbox subject-filter">
                        <option value="all" data-subject="all">All Subject</option>
                        @foreach (var coursefield in Model.CourseField)
                        {
                            <option value="@coursefield.Name" data-subject="@coursefield.Name">@coursefield.Name</option>
                        }
                    </select>
                </li>
             

            </ul>
        </div>
        <!-- /container -->
    </div>
    <!-- /filters -->

    <div class="container margin_60_35" id="Teachercontainer">
        @{
            Html.RenderAction("_TeacherData");
        }
    </div>
    <!-- /container -->


</main>
<!--/main-->
<script>
        $("#searchtxt").on('input', function () {
       $.ajax({
          url: "@Url.TeacherData("")",
            data: {
                Search: $(this).val()

            }
        })
            .done(function (response) {
                $("#Teachercontainer").html(response);
            })
            .fail(function (XMLHttpRequest, status, errorthrown) { alert("error"); });
        event.preventDefault();
      });

  
    $(".subject-filter").on('change',function(e) {
        $.ajax({
          url: "@Url.TeacherData("")",
          data:
          {
                  Writer: $(".subject-filter").val()
          }
          })
                .done(function(response) {
                    $("#Teachercontainer").html(response);
          })
            .fail(function(XMLHttpRequest, status, errorthrown) { alert("error"); });
    });

      $(".period-filter").click(function() {
        $.ajax({
          url: "@Url.TeacherData("")",
          data:
          {
                  timeperiod: $(this).attr("data-time")
          }
          })
                .done(function(response) {
                    $("#Teachercontainer").html(response);
          })
            .fail(function(XMLHttpRequest, status, errorthrown) { alert("error"); });
    });

</script>