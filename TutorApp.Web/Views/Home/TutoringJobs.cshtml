@model TutorApp.Web.ViewModels.ListViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="EduTime">
    <meta name="author" content="EduTime">
    <title>EduTime</title>
    <!-- Favicons-->
    <link rel="shortcut icon" href="img/favicon.ico" type="~/content/image/x-icon">
    <link rel="apple-touch-icon" type="image/x-icon" href="~/content/img/apple-touch-icon-57x57-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="72x72" href="~/content/img/apple-touch-icon-72x72-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="114x114" href="~/content/img/apple-touch-icon-114x114-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="144x144" href="~/content/img/apple-touch-icon-144x144-precomposed.png">
    <!-- BASE CSS -->
    <link href="~/content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/content/css/style.css" rel="stylesheet">
    <link href="~/content/css/vendors.css" rel="stylesheet">
    <link href="~/content/css/icon_fonts/css/all_icons.min.css" rel="stylesheet">

    <!-- SPECIFIC CSS -->
    <link href="~/content/css/skins/square/grey.css" rel="stylesheet">
    <link href="~/content/css/wizard.css" rel="stylesheet">
    <!-- YOUR CUSTOM CSS -->
    <link href="~/content/css/custom.css" rel="stylesheet">
</head>
<body id="admission_bg">

    <div id="preloader">
        <div data-loader="circle-side"></div>
    </div>
    <!-- End Preload -->

    <div id="form_container" class="clearfix">
        <figure>
            <a href="index.html"><img src="~/content/img/logo.png" width="149" height="42" data-retina="true" alt=""></a>
        </figure>
        <div id="wizard_container">
            <div id="top-wizard">
                <div id="progressbar"></div>
            </div>
            <!-- /top-wizard -->
            <form name="example-1" id="wrapped" method="post">
                <input id="website" name="website" type="text" value="">
                <!-- Leave for security protection, read docs for details -->
                <div id="middle-wizard">
                    <div class="step">
                        <div id="intro">
                            <figure><img src="img/wizard_intro_icon.svg" alt=""></figure>
                            <h1>Request a Tutor</h1>
                            <p>Fill the from regarding you preferences and you query. We’ll help you find tutors in your area.</p>
                            <p><strong>Learn from the nation’s largest community of professional tutors</strong></p>
                        </div>
                    </div>
                    <div class="step">
                        <h3 class="main_question"><strong>1/3</strong>Please fill with your details</h3>
                        <div class="form-group">
                            <input type="text" name="Name" class="form-control required" placeholder="Tutor Request Title">
                        </div>

                        <div class="form-group">
                            <input type="text" name="Description" class="form-control required" placeholder="Your Tutor Request Description">
                        </div>
                        <div class="form-group">
                            <input type="text" name="ZipCode" class="form-control" placeholder="Your Zip Code">
                        </div>
                        <div class="form-group select">
                            <div class="styled-select">
                                <select class="required" name="Location" id="education_apply">
                                    <option value="-1" selected>Select Meetup Place</option>

                                    <option value="Out">Outdoor</option>
                                    <option value="Home">Home</option>
                                    <option value="UC">University or College</option>


                                </select>
                            </div>
                        </div>
                        <input type="hidden" name="Date" class="date" placeholder="">

                        <div class="form-group">
                            <input type="text" name="City" class="form-control" placeholder="Enter Name of Your City">
                        </div>

                    </div>
                    <div class="step">
                        <h3 class="main_question"><strong>2/3</strong>Please fill your Time Preference</h3>
                        <div class="form-group select">
                            <div class="styled-select">
                                <select class="required" name="LessonBegins" id="education_apply">
                                    <option value="-1" selected="">When do you need it?</option>
                                    <option value="Today">Today</option>
                                    <option value="Few">With in this Week</option>
                                    <option value="Week">With in Two Weeks</option>
                                    <option value="Month">With in this Month</option>


                                </select>
                            </div>
                        </div>
                        <div class="form-group select">
                            <div class="styled-select">
                                <select class="required" name="Availability" id="education_apply">
                                    <option value="-1" selected>When are you free?</option>
                                    <option value="Morning">Morning</option>
                                    <option value="Evening">Evening</option>
                                    <option value="Noon">Noon</option>
                                    <option value="Anytime">Anytime</option>


                                </select>
                            </div>
                        </div>
                        <div class="form-group select">
                            <div class="styled-select">
                                <select name="SubjectID" id="education_apply">
                                    @foreach (var subject in Model.Courses)
                                    {
                                        <option value="@subject.ID">
                                            @subject.Name
                                        </option>
                                    }
                                </select>

                            </div>
                        </div>
                        <div class="form-group select">
                            <div class="styled-select">
                                <select class="required" name="GradingLevel" id="education_apply">
                                    <option value="-1" selected>Select Student Grade</option>
                                    <option value="School">School</option>
                                    <option value="College">College</option>
                                    <option value="UnderGraduate">UnderGraduate</option>
                                    <option value="Graduate">Graduate</option>
                                    <option value="Other">Other</option>


                                </select>
                            </div>
                        </div>
                    </div>
                    <!-- /step-->
                    <div class="submit step">
                        @if (Session["username"] == null)
                        {
                            <h3 class="main_question"><strong>3/3</strong>Your Login Details</h3>

                            <div class="form-group">
                                <input type="text" name="username" class="form-control required" placeholder="Your Username">
                            </div>
                            <div class="form-group">
                                <input type="text" name="password" class="form-control required" placeholder="Your Password">
                            </div>
                        }
                        else
                        {
                            <text>Press Submit Button to Submit your Tutoring Request.</text>
                        }

                    </div>
                    <!-- /step-->

                </div>
                <!-- /middle-wizard -->
                <div id="bottom-wizard">
                    <button type="button" name="backward" class="backward">Backward </button>
                    <button type="button" name="forward" class="forward">Forward</button>
                    <button type="submit" name="process" class="submit">Submit</button>
                </div>
                <!-- /bottom-wizard -->
            </form>
        </div>
        <!-- /Wizard container -->
    </div>
    <!-- /Form_container -->
    <!-- Modal terms -->
